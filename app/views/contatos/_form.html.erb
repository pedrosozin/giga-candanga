<%= form_for @contato do |f| %>
  <% if contato.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contato.errors.count, "error") %> prohibited this contato from being saved:</h2>

      <ul>
      <% contato.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :cargo %>
    <%= f.text_field :cargo %>
  </div>

  <div class="field">
    <%= f.label :telefone %>
    <%= f.text_field :telefone %>
  </div>

  <div class="field">
    <%= f.label :telefone2 %>
    <%= f.text_field :telefone2 %>
  </div>

  <div class="field">
    <%= f.label :telefone3 %>
    <%= f.text_field :telefone3 %>
  </div>

  <div class="field">
    <%= f.label :tipo %>
    <%= f.text_field :tipo %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :prioridade %>
    <%= f.number_field :prioridade %>
  </div>

  <div class="field">
    <% if @contato.ipa %>
      <%= f.hidden_field 'ipa_id' %>
    <% else %>
    <p><%= f.label :ipa_id %><br />
    <%= f.collection_select(:ipa_id, @ipas,:id, :nome, :prompt => true) %></p>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
