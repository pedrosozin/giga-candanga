<p id="notice"><%= notice %></p>

<h1>Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cargo</th>
      <th>Telefone</th>
      <th>Telefone 2</th>
      <th>Telefone 3</th>
      <th>Tipo</th>
      <th>Email</th>
      <th>Prioridade</th>
      <th>Ipa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.cargo %></td>
        <td><%= contato.telefone %></td>
        <td><%= contato.telefone2 %></td>
        <td><%= contato.telefone3 %></td>
        <td><%= contato.tipo %></td>
        <td><%= contato.email %></td>
        <td><%= contato.prioridade %></td>
        <% if contato.ipa %>
        <td><%= contato.ipa.nome %></td>
        <% end %>
        <td><%= link_to 'Show', contato %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contato', new_contato_path %>
