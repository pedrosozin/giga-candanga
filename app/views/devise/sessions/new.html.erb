<h3 class="login-box-msg">√Årea Administrativa</h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group has-feedback">
    <%= f.text_field :email, class: 'form-control',
                  autofocus: true, placeholder: 'Email' %>
    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.password_field :password, class: 'form-control',
                    autocomplete: 'off', placeholder: 'Senha' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>

  <div class="row">
    <div class="col-xs-8">
      <span>Esqueceu sua senha?</span><br/>
      <span>Clique <%= link_to 'aqui', new_password_path(resource_name) %></span>
    </div><!-- /.col -->
    <div class="col-xs-4">
      <%= f.submit 'Sign in', class: 'btn btn-primary btn-block btn-flat' %>
    </div><!-- /.col -->
  </div>
<% end %>
