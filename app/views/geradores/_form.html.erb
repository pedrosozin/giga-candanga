    <% end %>
  </div>

  <div class="field">
    <%= f.label :potencia %>
    <%= f.number_field :potencia %>
  </div>

  <div class="field">
    <%= f.label :fabricante %>
    <%= f.text_field :fabricante %>
  </div>

  <div class="field">
    <%= f.label :patrimonio %>
    <%= f.text_field :patrimonio %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
