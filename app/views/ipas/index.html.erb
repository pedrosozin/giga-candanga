<p id="notice"><%= notice %></p>

<h1>Ipas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ipas.each do |ipa| %>
      <tr>
        <td><%= ipa.nome %></td>
        <td><%= ipa.tipo %></td>
        <td><%= link_to 'Show', ipa %></td>
        <td><%= link_to 'Edit', edit_ipa_path(ipa) %></td>
        <td><%= link_to 'Destroy', ipa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ipa', new_ipa_path %>
