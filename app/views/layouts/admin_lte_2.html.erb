<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>GigaCandanga | Área Administrativa</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <%= csrf_meta_tags %>
  </head>

  <body class="skin-blue sidebar-mini fixed <%= params[:controller].parameterize %> <%= action_name %>">
    <div class="wrapper">

      <%= render partial: 'layouts/admin_lte_2_header' %>
      <%= render partial: 'layouts/admin_lte_2_sidebar' %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1><%= @page_header || '-' %></h1>
        </section>

        <!-- Main content -->
        <section class="content">
          <% if notice %>
            <div class="alert alert-success alert-dismissable">
              <i class="fa fa-check"></i>
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <b><%= notice %></b>
            </div>
          <% end %>

          <% if alert %>
            <div class="alert alert-danger alert-dismissable">
              <i class="fa fa-ban"></i>
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <b><%= alert %></b>
            </div>
          <% end %>
          <%= render(partial: "layouts/error_messages", locals: { object: @error_object })%>
          <%= yield %>
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->

      <!-- Main Footer -->
      <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
          C
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2017 <a href="http://gigacandanga.net.br/" target="_blank">Gigacandanga</a>.</strong> Todos direitos reservados.
      </footer>

      <div class="control-sidebar-bg" style="position: fixed; height: auto;"></div>

    </div><!-- ./wrapper -->

  </body>
</html>
