<p id="notice"><%= notice %></p>

<h1>Postes</h1>

<table>
  <thead>
    <tr>
      <th>Cod</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Reserva</th>
      <th>Caixa de Emenda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postes.each do |poste| %>
      <tr>
        <td><%= poste.cod %></td>
        <td><%= poste.latitude %></td>
        <td><%= poste.longitude %></td>
        <td><% if poste.reserva != nil %><%= poste.reserva.cod %><% end %></td>
        <td><% if poste.caixaemenda != nil %><%= poste.caixaemenda.cod %><% end %></td>
        <td><%= link_to 'Show', poste %></td>
        <td><%= link_to 'Edit', edit_poste_path(poste) %></td>
        <td><%= link_to 'Destroy', poste, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poste', new_poste_path %>
