<h3>Usuários</h3>
<span>  </span>
<%= button_to "Novo", new_usuario_registration_path, method: :get %>
  <table>
    <thead>
      <th>#</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Ações</th>
    </thead>
    <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td> <%= usuario.id %> </td>
          <!-- provisorio, validação cuidará desse detalhe -->
          <td> <%= usuario.nome %> </td>
          <td> <%= usuario.email %> </td>
          <!-- provisorio, validação cuidará desse detalhe -->
          <td> <%= usuario.telefone %> </td>
          <% if usuario == current_usuario %>
            <td> <%= link_to "Editar", edit_usuario_registration_path(usuario)%> </td>
          <% else %>
            <td> <%= link_to "Desativar", desativar_usuario_path(usuario) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
