<h3>Usuários</h3>
<span>  </span>

  <table>
    <thead>
      <th>#</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Ações</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= user.id %> </td>
          <!-- provisorio, validação cuidará desse detalhe -->
          <td> <%= user.nome %> </td>
          <td> <%= user.email %> </td>
          <!-- provisorio, validação cuidará desse detalhe -->
          <td> <%= user.telefone %> </td>
          <% if user == current_usuario %>
            <td> <%= link_to "Editar", edit_usuario_registration_path(user)%> </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
